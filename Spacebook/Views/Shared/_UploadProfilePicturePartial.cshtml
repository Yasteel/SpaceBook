@model Profile

<link rel="stylesheet" type="text/css" href="~/css/main.css">

<div class="modal fade modal-lg" id="uploadMediaModal" tabindex="-1" role="dialog" aria-labelledby="uploadMediaModalLabel" aria-hidden="true">
    <div class="modal-header">
        <h5 class="modal-title" id="modalHeader">Upload Profile Picture</h5>
        <button id="closeModal" type="button" data-bs-dismiss="modal" onclick="reset()">
            <span class="close" aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
           
            <div class="modal-body">
                <p id="errorField" style="display: none;">error</p>
                <div class="container-fluid h-100">
                    <div class="row justify-content-center h-100">
                        <div id="mediaColumn" class="col-sm" style="display: none;">
                            <div id="imageBox" style="display: none;">
                                <img id="displayImage" src="" width="700"/>
                            </div>
                        </div>
                        <br />
                        <hr />
                        <div class="col-sm">
                            <form id="createPostForm" method="post" action="ProfileWebApi/Upload" onsubmit="uploadImage(event)" enctype="multipart/form-data">
                                <div class="flex-container">
                                    <div class="flex-child" id="mediaUpload">
                                        <input class="inputFile" type="file" accept="image/*" asp-for="ProfilePictureFile" onchange="handleImageUpload()" />
                                    </div>
                                </div>
                                <br />
                                <button id="postButton" class="btn btn-primary" type="submit">Upload</button>
                            </form>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    
<script src="~/js/pages/uploadProfilePicture.js"></script>