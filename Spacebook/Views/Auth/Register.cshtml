@model Profile
@{
    ViewData["Title"] = "Register";
}

@section Styles{
    <link href="~/css/authentication.css" rel="stylesheet" />
}



<div class="row">
	<div class="header">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="col-md-6">
        <form asp-asp-controller="Auth" asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="">
                <input asp-for="@Model.Email" autocomplete="email" aria-required="true" placeholder="Email"/>                @*<label asp-for="@Model.Email"></label>*@
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="">
                <input asp-for="@Model.Password" autocomplete="new-password" aria-required="true" placeholder="Password"/>                @*<label asp-for="@Model.Password"></label>*@
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="">
                <input asp-for="@Model.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="Confirm Password"/>                @*<label asp-for="@Model.ConfirmPassword"></label>*@
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
        <div class="login-link">
            <p>
                Already have an account? <a asp-controller="Auth" asp-action="Index">Login</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
